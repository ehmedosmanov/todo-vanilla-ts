{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./dist",           /* Папка, куда будут сохраняться скомпилированные файлы */
    "rootDir": "./src",           /* Корневая папка для исходных файлов */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
